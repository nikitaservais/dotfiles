syntax on
set belloff=all
filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab
set guifont=Iosevka\ 20
set guioptions-=m
set guioptions-=T
set noesckeys
set relativenumber
set number
set ignorecase
set smartcase
set incsearch
set autochdir
set cinoptions=l1
colorscheme desert
" Set the background color for normal text in GUI and terminal to black
hi Normal guibg=black ctermbg=black
" Set foreground and background color for non-text areas in GUI and terminal
hi NonText guifg=black guibg=black ctermfg=black ctermbg=black
set termguicolors

" remap
map gl $
map gh 0
